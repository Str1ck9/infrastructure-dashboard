    <script>
        function searchServices() {
            // Declare variables
            var input, filter, grid, categories, links, a, i, txtValue;
            input = document.getElementById('searchInput');
            filter = input.value.toUpperCase();
            grid = document.querySelector(".dashboard-grid");
            categories = grid.getElementsByClassName('category');

            // Loop through all categories
            for (i = 0; i < categories.length; i++) {
                links = categories[i].getElementsByClassName("service-link");
                let categoryVisible = false;
                // Loop through all links in category
                for (let j = 0; j < links.length; j++) {
                    a = links[j].getElementsByClassName("service-name")[0];
                    txtValue = a.textContent || a.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        links[j].style.display = "";
                        categoryVisible = true;
                    } else {
                        links[j].style.display = "none";
                    }
                }
                if(categoryVisible){
                    categories[i].style.display = "";
                } else {
                    categories[i].style.display = "none";
                }
            }
        }

        function openModal(event, url) {
            event.preventDefault(); // Stop the link from opening a new tab
            event.stopPropagation(); // Stop the event from bubbling up to the link
            const modal = document.getElementById('quickLookModal');
            const iframe = document.getElementById('modal-iframe');
            iframe.src = url;
            modal.style.display = "block";
        }

        function closeModal() {
            const modal = document.getElementById('quickLookModal');
            const iframe = document.getElementById('modal-iframe');
            modal.style.display = "none";
            iframe.src = ""; // Stop loading the page
        }


        // Close modal if user clicks outside of it
        window.onclick = function(event) {
            const modal = document.getElementById('quickLookModal');
            if (event.target == modal) {
                closeModal();
            }
        }

// Theme toggle functionality (Green/Red mode)
function toggleTheme() {
            const body = document.body;
            const button = document.querySelector('.theme-toggle');
            
            body.classList.toggle('red-mode');
            const isRed = body.classList.contains('red-mode');
            
            button.textContent = isRed ? 'TACTICAL' : 'ASSIMILATE';
            localStorage.setItem('theme', isRed ? 'red' : 'green');
        }

        function addStatusIndicators() {
            const services = document.querySelectorAll('.service-name');
            services.forEach(service => {
                // Clear existing dot if any (for re-runs)
                const existingDot = service.querySelector('.service-status-dot');
                if (existingDot) {
                    existingDot.remove();
                }
                const dot = document.createElement('span');
                dot.className = 'service-status-dot';
                service.prepend(dot);
            });
        }

        async function checkServiceStatus(linkElement) {
            const url = linkElement.href;
            const statusDot = linkElement.querySelector('.service-status-dot');
            // Reset status for re-checks
            statusDot.classList.remove('online', 'offline');
            
            try {
                // 'no-cors' mode means we won't get a real response, but it's a good way
                // to check if the port is open and the service is responding at all.
                // A failed fetch means the service is likely down.
                await fetch(url, { mode: 'no-cors', signal: AbortSignal.timeout(5000) });
                statusDot.classList.add('online');
                return true;
            } catch (error) {
                statusDot.classList.add('offline');
                return false;
            }
        }

        async function checkAllServices() {
            document.querySelector('.refresh-button').innerText = '...'; // Indicate loading
            const serviceLinks = document.querySelectorAll('.service-link');
            const statusPromises = Array.from(serviceLinks).map(checkServiceStatus);
            const results = await Promise.all(statusPromises);
            
            const offlineCount = results.filter(r => !r).length;
            const mainStatusText = document.querySelector('p.status');
            
            if (offlineCount === 0) {
                mainStatusText.innerHTML = '<span class="status-indicator"></span>RESISTANCE IS FUTILE';
                mainStatusText.querySelector('.status-indicator').style.background = '#00ff00';
                mainStatusText.querySelector('.status-indicator').style.boxShadow = '0 0 10px #00ff00';
            } else {
                mainStatusText.innerHTML = `<span class="status-indicator"></span>ADAPTATION IN PROGRESS: ${offlineCount} NODE(S) OFFLINE`;
                mainStatusText.querySelector('.status-indicator').style.background = '#ff0000';
                mainStatusText.querySelector('.status-indicator').style.boxShadow = '0 0 10px #ff0000';
            }
            document.querySelector('.refresh-button').innerText = 'üîÑ';
        }

        // Load saved theme preference
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme');
            const button = document.querySelector('.theme-toggle');
            
            if (savedTheme === 'red') {
                document.body.classList.add('red-mode');
                button.textContent = 'TACTICAL';
            }

            // Set last update time (Stardate)
            const now = new Date();
            const stardate = (now.getTime() / 1000 / 86400 + 2400000.5).toFixed(2);
            document.getElementById('lastUpdate').textContent = stardate;

            addStatusIndicators();
            checkAllServices();
        });

        // Add smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>
